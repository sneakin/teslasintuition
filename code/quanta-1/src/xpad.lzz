class XPad
{
public:
  enum Axis {
    AXIS_LEFT_X,
    AXIS_LEFT_Y,
    AXIS_LEFT_TRIGGER,
    AXIS_RIGHT_X,
    AXIS_RIGHT_Y,
    AXIS_RIGHT_TRIGGER
  };

  static const int AXIS_MIN = -32768, AXIS_MAX = 32768, AXIS_RANGE = AXIS_MAX - AXIS_MIN;
  static const int AXIS_LEFT_DEAD_ZONE = 10000, AXIS_RIGHT_DEAD_ZONE = 4000;

  enum Button {
    BUTTON_A,
    BUTTON_B,
    BUTTON_BLACK,
    BUTTON_X,
    BUTTON_Y,
    BUTTON_WHITE,
    BUTTON_BACK,
    BUTTON_START
  };
};
